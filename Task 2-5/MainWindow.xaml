<Window x:Class="Task_2_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Приложение для регистрации и авторизации" 
        Height="600" Width="600"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}">
    <Grid Background="#E3F2FD">
        <materialDesign:Card Margin="50" VerticalAlignment="Center" Padding="30">
            <materialDesign:Card.Effect>
                <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="2" Color="#DDDDDD"/>
            </materialDesign:Card.Effect>
            <StackPanel>
                <TextBlock Text="Регистрация пользователя" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                
                <TextBox x:Name="LoginTextBox" 
                         materialDesign:HintAssist.Hint="Введите логин" 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                         Margin="0,10"
                         Height="50"/>
                
                <PasswordBox x:Name="PassBox" 
                             materialDesign:HintAssist.Hint="Введите пароль" 
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}" 
                             Margin="0,10"
                             Height="50"/>
                
                <Button x:Name="RegisterButton" 
                        Content="Зарегистрироваться" 
                        Margin="0,20,0,10"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Height="45"
                        Background="#2196F3"
                        BorderBrush="#2196F3"
                        Click="Button_Register_Click"/>
                
                <Button x:Name="AuthButton" 
                        Content="Вход" 
                        Margin="0,10,0,0"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Height="45"
                        BorderBrush="#2196F3"
                        Foreground="#2196F3"
                        Click="Button_Window_Auth_Click"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>